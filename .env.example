# Weather Daemon Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env files with real API keys to version control!

# Google Maps API Key (required)
# Get yours at: https://developers.google.com/maps/documentation/weather
# NEVER commit your real API key - .env is gitignored for security
WEATHER_API_KEY=your_api_key_here

# Location coordinates (required)
WEATHER_LATITUDE=40.7128
WEATHER_LONGITUDE=-74.0060

# Human-readable location name (optional)
WEATHER_LOCATION_NAME=New York, NY

# Output directory for weather_forecast.json (default: /opt/weather-daemon/cache)
# Symlink this to your web root as needed
WEATHER_OUTPUT_DIR=/opt/weather-daemon/cache

# Poll interval in seconds (default: 3600 = 1 hour)
WEATHER_POLL_INTERVAL=3600

# HTTP timeout in seconds (default: 30)
WEATHER_TIMEOUT=30

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
WEATHER_LOG_LEVEL=INFO

# Log format: text or json (default: text)
# Use json for production environments with log aggregation tools
WEATHER_LOG_FORMAT=text

# Health Check Server Configuration
# Enable health check HTTP endpoint for monitoring (default: true)
WEATHER_HEALTH_CHECK_ENABLED=true
# Health check server host (default: 127.0.0.1)
WEATHER_HEALTH_CHECK_HOST=127.0.0.1
# Health check server port (default: 8080)
WEATHER_HEALTH_CHECK_PORT=8080

# API Endpoint Configuration (optional - defaults to Google Weather API)
# Customize these to use alternative weather providers
# WEATHER_API_BASE_URL=https://weather.googleapis.com/v1
# WEATHER_CURRENT_ENDPOINT=currentConditions:lookup
# WEATHER_HOURLY_ENDPOINT=forecast/hours:lookup
# WEATHER_DAILY_ENDPOINT=forecast/days:lookup
